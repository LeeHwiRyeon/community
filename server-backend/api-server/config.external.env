# TheNewsPaperData 관리 시스템 - 외장하드 설정

# 서버 설정
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:3000

# PostgreSQL 데이터베이스 설정 (외장하드)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thenewspaperdata
DB_USER=postgres
DB_PASSWORD=postgres

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 설정
JWT_SECRET=news_paper_vip_super_secret_key_2024_external
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=news_paper_vip_refresh_secret_key_2024_external
JWT_REFRESH_EXPIRE=30d

# 파일 업로드 설정 (외장하드)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=D:/database/thenewspaper/Uploads/files

# 로깅 설정 (외장하드)
LOG_LEVEL=info
LOG_PATH=D:/database/thenewspaper/Logs/API/logs

# 보안 설정
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 개발자 설정
DEBUG=false
VERBOSE_LOGGING=false

# 데이터베이스 백업 설정
BACKUP_PATH=D:/database/thenewspaper/Backups
BACKUP_RETENTION_DAYS=30

# 모니터링 설정
ENABLE_MONITORING=true
METRICS_PORT=9090
