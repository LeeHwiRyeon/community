{
  "name": "thenewspaper-platform-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "echo '🔧 백엔드 개발 서버 시작...' && node --watch src/index.js",
    "start": "echo '🚀 백엔드 서버 시작...' && node src/index.js",
    "build": "echo '🔧 백엔드 빌드 시작...' && echo '✅ 백엔드 빌드 완료! (Node.js는 컴파일이 필요 없습니다)'",
    "build:verbose": "echo '🔧 백엔드 상세 빌드 시작...' && echo '📁 소스 파일 확인...' && echo '✅ 백엔드 빌드 완료! (Node.js는 컴파일이 필요 없습니다)'",
    "stop:win": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/stop-by-port.ps1 -Port 50000",
    "restart:win": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/win-restart.ps1 -Port 50000",
    "import:init": "node scripts/import-initial.js",
    "mock": "ENV_ALLOW_MOCK=1 node scripts/mock-data.js",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:unit:watch": "jest --watch",
    "test:api": "node tests/api-random.js",
    "test:contrast": "node scripts/contrast-audit.js",
    "test:strict": "node tests/api-strict.js",
    "test:strict-ro": "READONLY=1 node tests/api-strict.js",
    "test:security": "node tests/security-strict.js",
    "test:search": "node --test tests/smoke/api-smoke.test.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ci": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:e2e:smoke": "playwright test --grep \"should load home page|should have main navigation elements\"",
    "audit:security": "npm audit --omit=dev --production || exit 0",
    "ci:backend": "npm run test:unit && npm run test:strict && npm run test:strict-ro && npm run test:security",
    "migrate:rpg": "node scripts/migrations/20250926_add_rpg_profile.js",
    "migrate:rpg:down": "node scripts/migrations/20250926_add_rpg_profile.js --down"
  },
  "dependencies": {
    "@google-cloud/translate": "^9.2.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.9",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "google-auth-library": "^9.14.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.1",
    "prom-client": "^15.1.3",
    "redis": "^4.7.1",
    "response-time": "^2.3.4",
    "seedrandom": "^3.0.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "axe-core": "^4.9.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "puppeteer": "^23.4.1",
    "supertest": "^7.0.0"
  },
  "description": "1. Copy `.env.example` to `.env` and set DB credentials.\r 2. Install dependencies:\r ```bash\r npm install\r ```\r 3. Initialize schema & import initial JSON data:\r ```bash\r npm run import:init\r ```\r 4. Start server:\r ```bash\r npm run start\r ```\r Server default port: 50000.",
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}