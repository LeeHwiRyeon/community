# Security Configuration Example
# Copy this to .env and set your actual values

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_ISSUER=community-platform
JWT_AUDIENCE=community-platform-users
JWT_ACCESS_TTL_SEC=900
JWT_REFRESH_TTL_SEC=1209600

# Security Headers
DISABLE_HELMET=0
DISABLE_CSP=0
ALLOW_INLINE=1

# Rate Limiting
RATE_LIMIT_WRITE_PER_MIN=120
RATE_LIMIT_SEARCH_PER_MIN=180
RATE_LIMIT_BACKEND=redis

# CORS Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Database Security
DB_SSL_MODE=require
DB_SSL_REJECT_UNAUTHORIZED=1

# Redis Security
REDIS_PASSWORD=your-redis-password-here
REDIS_TLS=1

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Security Monitoring
ENABLE_SECURITY_LOGGING=1
SECURITY_LOG_LEVEL=warn
ENABLE_BRUTE_FORCE_PROTECTION=1
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=./uploads

# API Security
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
ENABLE_API_KEY_AUTH=0
API_KEY_HEADER=X-API-Key

# Session Security
SESSION_SECRET=your-session-secret-here
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_HTTPONLY=1
SESSION_COOKIE_SAMESITE=strict
SESSION_MAX_AGE=86400000

# Content Security Policy
CSP_REPORT_URI=/api/security/csp-report
CSP_REPORT_ONLY=0

# Additional Security
ENABLE_REQUEST_ID=1
ENABLE_CORS_CREDENTIALS=1
TRUST_PROXY=1
