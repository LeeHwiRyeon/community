# 프로덕션 환경 설정 템플릿
# 실제 배포 시 이 파일을 .env.production으로 복사하고 값들을 수정하세요

NODE_ENV=production
PORT=50000

# 데이터베이스 설정
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=community_production
DATABASE_USER=community_user
DATABASE_PASSWORD=secure_production_password

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# JWT 설정
JWT_SECRET=your_super_secure_jwt_secret_key_for_production_2024
JWT_EXPIRE=7d

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# 보안 설정
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 이메일 설정 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 모니터링 설정
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 로깅 설정
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS 설정
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# 세션 설정
SESSION_SECRET=your_super_secure_session_secret_for_production
SESSION_MAX_AGE=86400000

# API 설정
API_VERSION=v1
API_PREFIX=/api

# 캐시 설정
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 알림 설정
NOTIFICATION_EMAIL=true
NOTIFICATION_PUSH=true

# 백업 설정
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# 성능 설정
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
RESPONSE_TIMEOUT=30000

# 보안 헤더
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# 데이터베이스 연결 풀
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis 연결 풀
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_ACQUIRE=30000
REDIS_POOL_IDLE=10000