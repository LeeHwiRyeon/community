{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Agent": {
    "DefaultMaxSteps": 8,
    "DefaultMaxRunTimeSeconds": 60,
    "Policy": {
      "MaxRetries": 2,
      "BackoffMs": 1500,
      "MaxCharsPerStep": 100000
    },
    "StoragePath": "agent.db"
  },
  "Scheduler": {
    "RecurringWorkflows": [
      {
        "Objective": "뉴스 RSS 확인 후 파일 저장",
        "PeriodMinutes": 5,
        "Priority": 1,
        "Context": {
          "rss": "https://feeds.bbci.co.uk/news/rss.xml",
          "out": "artifacts/news/last.txt"
        },
        "Plan": [
          {
            "Order": 1,
            "Tool": "http.get",
            "Input": "%ctx:rss%"
          },
          {
            "Order": 2,
            "Tool": "rss.top",
            "Input": "5"
          },
          {
            "Order": 3,
            "Tool": "file.write",
            "Input": "%ctx:out%"
          }
        ]
      },
      {
        "Objective": "환율 확인 후 파일 저장",
        "PeriodMinutes": 10,
        "Priority": 2,
        "Context": {
          "url": "https://api.exchangerate-api.com/v4/latest/KRW",
          "out": "artifacts/fx/krw-usd.txt"
        },
        "Plan": [
          {
            "Order": 1,
            "Tool": "http.get",
            "Input": "%ctx:url%"
          },
          {
            "Order": 2,
            "Tool": "file.write",
            "Input": "%ctx:out%"
          }
        ]
      }
    ]
  }
}