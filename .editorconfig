root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{json,md}]
indent_style = space
indent_size = 2

[*.{bat,ps1}]
charset = utf-8-bom
end_of_line = crlf

[*.{py}]
indent_style = space
indent_size = 4

[*.{html,css}]
indent_style = space
indent_size = 2