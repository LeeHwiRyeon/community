# 자동 개발 시스템 환경 변수

# 서버 설정
PORT=3000
NODE_ENV=development

# AI 모델 설정
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7

# 데이터베이스 설정
POSTGRES_URL=postgresql://username:password@localhost:5432/auto_dev_system
MONGODB_URL=mongodb://localhost:27017/auto_dev_logs
REDIS_URL=redis://localhost:6379

# 외부 서비스
GITHUB_TOKEN=your_github_token_here
DOCKER_HUB_USERNAME=your_dockerhub_username
DOCKER_HUB_PASSWORD=your_dockerhub_password

# 모니터링
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# 테스트 설정
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/auto_dev_test
TEST_REDIS_URL=redis://localhost:6379/1

# 로깅
LOG_LEVEL=info
LOG_FILE=logs/auto-dev-system.log

# 성능 설정
MAX_CONCURRENT_JOBS=10
CACHE_TTL=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 보안
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
CORS_ORIGIN=http://localhost:3000
