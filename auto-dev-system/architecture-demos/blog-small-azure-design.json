    "caching": {
      "strategy": "redis",
      "ttl": 3600,
      "invalidation": "time-based"
    },
    "loadBalancing": {
      "algorithm": "round-robin",
      "healthCheck": true,
      "stickySessions": false
    },
    "database": {
