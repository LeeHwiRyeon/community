{
    "dashboard": {
        "id": null,
        "title": "Community Platform Security",
        "tags": [
            "community",
            "security"
        ],
        "style": "dark",
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Failed Login Attempts",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(community_failed_logins_total[5m])",
                        "legendFormat": "Failed Logins/sec"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Attempts/sec",
                        "min": 0
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "Rate Limiting",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(community_rate_limit_exceeded_total[5m])",
                        "legendFormat": "Rate Limit Exceeded/sec"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Events/sec",
                        "min": 0
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "Security Events",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(community_security_events_total{type=\"xss\"}[5m])",
                        "legendFormat": "XSS Attempts"
                    },
                    {
                        "expr": "rate(community_security_events_total{type=\"sql_injection\"}[5m])",
                        "legendFormat": "SQL Injection Attempts"
                    },
                    {
                        "expr": "rate(community_security_events_total{type=\"csrf\"}[5m])",
                        "legendFormat": "CSRF Attempts"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Events/sec",
                        "min": 0
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 4,
                "title": "Blocked IPs",
                "type": "table",
                "targets": [
                    {
                        "expr": "community_blocked_ips",
                        "legendFormat": "{{ip}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "JWT Token Issues",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(community_jwt_errors_total[5m])",
                        "legendFormat": "JWT Errors/sec"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Errors/sec",
                        "min": 0
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                }
            },
            {
                "id": 6,
                "title": "File Upload Security",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(community_file_upload_rejected_total[5m])",
                        "legendFormat": "Rejected Uploads/sec"
                    },
                    {
                        "expr": "rate(community_file_upload_malicious_total[5m])",
                        "legendFormat": "Malicious Files/sec"
                    }
                ],
                "yAxes": [
                    {
                        "label": "Uploads/sec",
                        "min": 0
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                }
            }
        ],
        "time": {
            "from": "now-1h",
